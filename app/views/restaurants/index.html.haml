- if @restaurants.any?
  - @restaurants.each do |restaurant|
    = link_to restaurant.name, restaurant_path(restaurant)
    = link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant)
    = link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete
    = link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant)
    %h3
      Reviews for
      = restaurant.name
      Average rating: #{star_rating(restaurant.average_rating)}

    - if restaurant.reviews.any?
      %ul
        - restaurant.reviews.each do |review|
          %li
            = review.thoughts
            %strong= review.rating
            \/5
            = "Review left " + review_recency(review.created_at) + " ago"
            = link_to "Delete review for #{restaurant.name}", review_path(review), method: :delete
            = link_to "Endorse this review of #{restaurant.name}", review_endorsements_path(review), method: :post
            %p= pluralize review.endorsements.count, 'endorsement'
    - else
      %p No reviews
- else
  %h1 No restaurant yet!
= link_to "Add a restaurant", new_restaurant_path
= notice
= yield
